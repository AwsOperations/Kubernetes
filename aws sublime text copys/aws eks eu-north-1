eksctl create cluster --name=Preprod \
                      --region=eu-north-1 \
                      --zones=eu-north-1a,eu-north-1b \
                      --version="1.27" \
                      --without-nodegroup

eksctl create nodegroup --cluster=Preprod \
                        --region=eu-north-1 \
                        --name=Preprod-ng1 \
                        --node-type=t3.small \
                        --nodes-min=2 \
                        --nodes-max=2 \
                        --node-volume-size=100 \
                        --ssh-access \
                        --ssh-public-key=preprod \
                        --managed \
                        --asg-access \
                        --external-dns-access \
                        --full-ecr-access \
                        --appmesh-access \
                        --alb-ingress-access \
                        --node-private-networking

eksctl utils associate-iam-oidc-provider \
    --region eu-north-1 \
    --cluster Preprod \
    --approve

curl -o iam_policy_latest.json https://raw.githubusercontent.com/kubernetes-sigs/aws-load-balancer-controller/main/docs/install/iam_policy.json

aws iam create-policy \
    --policy-name AWSLoadBalancerControllerIAMPolicy \
    --policy-document file://iam_policy_latest.json

arn:aws:iam::402204818948:policy/AWSLoadBalancerControllerIAMPolicy

eksctl create iamserviceaccount \
  --cluster=Preprod \
  --namespace=kube-system \
  --name=aws-load-balancer-controller \
  --attach-policy-arn=arn:aws:iam::402204818948:policy/AWSLoadBalancerControllerIAMPolicy \
  --override-existing-serviceaccounts \
  --approve

602401143452.dkr.ecr.eu-north-1.amazonaws.com

helm repo add eks https://aws.github.io/eks-charts

helm repo update

helm install aws-load-balancer-controller eks/aws-load-balancer-controller \
  -n kube-system \
  --set clusterName=Preprod \
  --set serviceAccount.create=false \
  --set serviceAccount.name=aws-load-balancer-controller \
  --set region=eu-north-1 \
  --set vpcId=vpc-068c81c573a5308c0 \
  --set image.repository=602401143452.dkr.ecr.eu-north-1.amazonaws.com/amazon/aws-load-balancer-controller

